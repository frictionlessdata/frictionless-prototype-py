{
  "title": "Frictionless Report",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://github.com/frictionlessdata/frictionless-py/tree/master/frictionless/assets/profiles/report.json",
  "type": "object",
  "required": [
    "time",
    "valid",
    "version",
    "tableCount",
    "errorCount",
    "errors",
    "tables"
  ],
  "properties": {
    "time": {
      "type": "number",
      "title": "Time",
      "description": "The overall time it took to run validation",
      "minimum": 0
    },
    "valid": {
      "type": "boolean",
      "title": "Valid",
      "description": "Whether all the inspected tables valid or not"
    },
    "version": {
      "type": "string",
      "title": "Version",
      "description": "Frictionless version"
    },
    "tableCount": {
      "type": "integer",
      "title": "Table count",
      "description": "Number of tables validated.",
      "minimum": 0
    },
    "errorCount": {
      "type": "integer",
      "title": "Error count",
      "description": "Number of errors found across all the tables.",
      "minimum": 0
    },
    "errors": {
      "type": "array",
      "title": "Errors",
      "description": "The global validation errors.",
      "items": {
        "type": "object",
        "required": [
          "code",
          "name",
          "tags",
          "message",
          "description"
        ],
        "properties": {
          "code": {
            "type": "string",
            "title": "Code",
            "description": "The error code."
          },
          "name": {
            "type": "string",
            "title": "None",
            "description": "The error name."
          },
          "tags": {
            "type": "array",
            "title": "Tags",
            "description": "The error tags.",
            "items": {
              "type": "string"
            }
          },
          "message": {
            "type": "string",
            "title": "Message",
            "description": "The error message."
          },
          "description": {
            "type": "string",
            "title": "Description",
            "description": "The error description."
          },
          "details": {
            "type": "string",
            "title": "Details",
            "description": "The error details."
          }
        }
      }
    },
    "tables": {
      "type": "array",
      "title": "Tables",
      "description": "The validation results for each of the tables.",
      "items": {
        "type": "object",
        "required": [
          "time",
          "valid",
          "scope",
          "partial",
          "rowCount",
          "errorCount",
          "source",
          "scheme",
          "format",
          "encoding",
          "compression",
          "headers",
          "headersRow",
          "headersJoiner",
          "pickFields",
          "skipFields",
          "limitFields",
          "offsetFields",
          "pickRows",
          "skipRows",
          "limitRows",
          "offsetRows",
          "schema",
          "dialect",
          "errors"
        ],
        "properties": {
          "time": {
            "type": "number",
            "title": "Time",
            "description": "The time it took to validate this table.",
            "minimum": 0
          },
          "valid": {
            "type": "boolean",
            "title": "Valid",
            "description": "The validation result."
          },
          "scope": {
            "type": "array",
            "title": "Scope",
            "description": "List of errors codes the table has been checked for.",
            "items": {
              "type": "string"
            }
          },
          "partial": {
            "type": "boolean",
            "title": "Partial",
            "description": "Whether the validation was stopped because of an error limit."
          },
          "rowCount": {
            "type": "integer",
            "title": "Row count",
            "description": "Number of rows validated.",
            "minimum": 0
          },
          "errorCount": {
            "type": "integer",
            "title": "Error count",
            "description": "Number of errors found.",
            "minimum": 0
          },
          "source": {
            "type": "string",
            "title": "Source",
            "description": "Path or URI where this table was loaded from."
          },
          "scheme": {
            "type": "string",
            "title": "Scheme",
            "description": "The scheme used to load the data."
          },
          "format": {
            "type": "string",
            "title": "Format",
            "description": "The data format."
          },
          "encoding": {
            "type": "string",
            "title": "Encoding",
            "description": "The encoding of the table."
          },
          "compression": {
            "type": "string",
            "title": "Compression",
            "description": "The compression of the table."
          },
          "headers": {
            "type": ["array", "null"],
            "title": "Headers",
            "description": "List of table's headers.",
            "items": {
              "type": "string"
            }
          },
          "headersRow": {
            "type": ["array", "integer", "null"],
            "title": "Headers Row Number",
            "description": "Header row number.",
            "items": {
              "type": "integer"
            }
          },
          "headersJoiner": {
            "type": ["string", "null"],
            "title": "Headers Joiner",
            "description": "Header joiner."
          },
          "pickFields": {
            "type": ["array", "null"],
            "title": "Pick Fields",
            "description": "The list of picked fields."
          },
          "skipFields": {
            "type": ["array", "null"],
            "title": "Skip Fields",
            "description": "The list of skiped fields."
          },
          "limitFields": {
            "type": ["number", "null"],
            "title": "Field Limit",
            "description": "Maxumum amount of fields."
          },
          "offsetFields": {
            "type": ["number", "null"],
            "title": "Field Offset",
            "description": "Offset of fields."
          },
          "pickRows": {
            "type": ["array", "null"],
            "title": "Pick Rows",
            "description": "The list of picked rows."
          },
          "skipRows": {
            "type": ["array", "null"],
            "title": "Skip Rows",
            "description": "The list of skiped rows."
          },
          "limitRows": {
            "type": ["number", "null"],
            "title": "Row Limit",
            "description": "Maxumum amount of rows."
          },
          "offsetRows": {
            "type": ["number", "null"],
            "title": "Row Offset",
            "description": "Offset of rows."
          },
          "schema": {
            "type": ["object", "null"],
            "title": "Schema",
            "description": "A Table Schema Object."
          },
          "dialect": {
            "type": ["object", "null"],
            "title": "Dialect",
            "description": "The tabular dialect of the table."
          },
          "errors": {
            "type": "array",
            "title": "Errors",
            "items": {
              "type": "object",
              "required": [
                "code",
                "name",
                "tags",
                "details",
                "message",
                "description"
              ],
              "properties": {
                "code": {
                  "type": "string",
                  "title": "Code",
                  "description": "The error code."
                },
                "name": {
                  "type": "string",
                  "title": "None",
                  "description": "The error name."
                },
                "tags": {
                  "type": "array",
                  "title": "Tags",
                  "description": "The error tags.",
                  "items": {
                    "type": "string"
                  }
                },
                "details": {
                  "type": "string",
                  "title": "Details",
                  "description": "The error details."
                },
                "message": {
                  "type": "string",
                  "title": "Message",
                  "description": "The error message."
                },
                "description": {
                  "type": "string",
                  "title": "Description",
                  "description": "The error description."
                },
                "cells": {
                  "type": "array",
                  "title": "Cells",
                  "description": "The error cells.",
                  "items": {
                    "type": "string"
                  }
                },
                "rowNumber": {
                  "type": "number",
                  "title": "Row Number",
                  "description": "The error row number."
                },
                "rowPosition": {
                  "type": "number",
                  "title": "Row Position",
                  "description": "The error row position."
                },
                "cell": {
                  "type": "string",
                  "title": "Cell",
                  "description": "The error cell."
                },
                "fieldName": {
                  "type": "string",
                  "title": "Field Name",
                  "description": "The error field name."
                },
                "fieldNumber": {
                  "type": "number",
                  "title": "Field Number",
                  "description": "The error field number."
                },
                "fieldPosition": {
                  "type": "number",
                  "title": "Field Position",
                  "description": "The error field position."
                }
              }
            }
          }
        }
      }
    }
  }
}
